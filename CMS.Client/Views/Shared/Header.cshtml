<script>
    // Hàm để kiểm tra thời gian hết hạn của accessToken
    function checkAccessTokenExpiration() {
        // Hàm để lấy giá trị từ cookie
        function getCookie(name) {
            var value = "; " + document.cookie;
            var parts = value.split("; " + name + "=");
            if (parts.length == 2) return parts.pop().split(";").shift();
        }

        var accessTokenExpiration = getCookie('accessTokenExpires');

        accessTokenExpiration = new Date(accessTokenExpiration);

        // Kiểm tra nếu accessToken đã hết hạn
        if (accessTokenExpiration <= new Date()) {
            // Gọi hàm refreshToken để cập nhật accessToken
            refreshToken();
        }
    }

    // Hàm gọi API refreshToken
    function refreshToken() {
        // Lưu ý: Cần thay đổi URL và dữ liệu gửi đi cho phù hợp với API của bạn
        var refreshToken = getCookie('refreshToken');
        $.ajax({
            url: "https://localhost:7149/api/Authenticates/refreshToken",
            type: "POST",
            dataType: 'json',
            contentType: "application/json",
            data: JSON.stringify({ refreshToken: refreshToken }), // Dữ liệu gửi đi là refreshToken
            success: function (response) {
                var newAccessToken = response.accessToken;
                var newAccessTokenExpiration = response.accessTokenExpires;

                // Cập nhật lại accessToken và thời gian hết hạn của accessToken lên cookie
                document.cookie = "accessToken=" + newAccessToken + "; path=/";
                document.cookie = "accessTokenExpires=" + newAccessTokenExpiration + "; path=/";

                window.location.reload();
            },
            error: function (xhr, status, error) {
                console.error("Error refreshing token:", error);
                redirectToHome(); // Chuyển hướng người dùng về trang chủ nếu refreshToken không thành công
            }
        });
    }

    // Hàm chuyển hướng người dùng về trang chủ
    function redirectToHome() {
        window.location.href = '/Authenticate/Login'; // Đường dẫn trang chủ của ứng dụng
    }

    $(document).ready(function () {
        // Kiểm tra thời gian hết hạn của accessToken mỗi 5 phút
        setInterval(checkAccessTokenExpiration, 5 * 1000); // Đơn vị tính là milliseconds
    });
</script>




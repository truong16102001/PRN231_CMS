<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a href="/" class="navbar-brand has-logo">
                <span class="logo d-inline">
                    <img src="https://cmshn.fpt.edu.vn/pluginfile.php/1/core_admin/logocompact/0x70/1697438386/2020-FPTU-Eng.png" alt="eLearning">
                </span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                @if (Context.Request.Cookies["refreshToken"] is null)
                {
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item ">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Authenticate" asp-action="Login">
                                <i class="fa fa-unlock-alt" aria-hidden="true"></i> Log In
                            </a>
                        </li>
                    </ul>
                }
                else
                {
                    @if (Context.Request.Cookies["accessToken"] is not null)
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item "> <a href="/Accounts/Profile"><i class="fa fa-user" aria-hidden="true"></i> Profile </a></li>
                            <li class="nav-item "> <a href="/Authenticate/Logout"><i class="fa fa-sign-out"></i> Logout</a> </li>
                        </ul>
                    }
                }

            </div>
        </div>
    </nav>
</header>
@using Newtonsoft.Json;
@{
    ViewData["Title"] = "Home";
}

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Home</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />


    <style>
        .content-wrapper {
            margin-left: 250px; /* Điều chỉnh giá trị này tùy thuộc vào kích thước của leftboard */
            margin-top: 80px;
        }

    </style>
</head>
<body class="sb-nav-fixed">
    @Html.Partial("~/Views/Shared/Header.cshtml")

    <div id="layoutSidenav">
        <div id="page-wrapper">
            @Html.Partial("~/Views/Shared/Notifications.cshtml")
            @{
                var userJson = Context.Session.GetString("user");
            }
            @if (!string.IsNullOrEmpty(userJson))
            {
                @Html.Partial("~/Views/Shared/Leftboard.cshtml")
            }
            <div id="layoutSidenav_content" class="content-wrapper">
                <div class="container-fluid px-4">
                    <div class="text-center">
                        <div id="frontpage-banner">
                            <div id="frontpage-banner-content">
                                <h2 class="pb-4 pl-3 mb-3">FPT EDUCATION</h2>
                                <h3 class="mb-3"> COURSE MANAGEMENT SYSTEM</h3>
                                <a href="course/" class="m-3 btn btn-primary" role="button">Learn more</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
